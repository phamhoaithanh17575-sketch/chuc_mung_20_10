<script>
  const envelope = document.getElementById('envelope');
  const card = document.getElementById('card');
  const finalText = document.getElementById('finalText');
  let stage = 0;
  let heartInterval;

  // Nh·∫•n l·∫ßn 1 ‚Üí m·ªü th∆∞
  envelope.addEventListener('click', () => {
    if (stage === 0) {
      envelope.classList.add('open');
      setTimeout(() => {
        envelope.style.display = 'none';
        card.style.display = 'block';
      }, 600);
      heartInterval = setInterval(createHeart, 300);
      stage = 1;
    }
  });

  // Nh·∫•n l·∫ßn 2 ‚Üí hi·ªán hoa h·ªìng r∆°i + d√≤ng ch·ªØ
  card.addEventListener('click', () => {
    if (stage === 1) {
      clearInterval(heartInterval);
      card.style.transition = "opacity 1s ease";
      card.style.opacity = 0;
      document.body.style.background = "linear-gradient(180deg, #fff0f5, #ff9eb5)";
      setTimeout(() => {
        card.style.display = 'none';
        createRoseRain();
        finalText.style.display = 'block';
      }, 1000);
      stage = 2;
    }
  });

  // Tr√°i tim bay
  function createHeart() {
    const heart = document.createElement('div');
    heart.classList.add('heart');
    heart.textContent = '‚ù§';
    heart.style.left = Math.random() * window.innerWidth + 'px';
    heart.style.animationDuration = 4 + Math.random() * 3 + 's';
    heart.style.fontSize = 16 + Math.random() * 24 + 'px';
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 7000);
  }

  // Hoa h·ªìng bay
  function createRoseRain() {
    setInterval(() => {
      const rose = document.createElement('div');
      rose.classList.add('rose');
      rose.style.left = Math.random() * window.innerWidth + 'px';
      rose.style.animationDuration = 5 + Math.random() * 4 + 's';
      rose.style.width = 60 + Math.random() * 60 + 'px';
      rose.style.height = rose.style.width;
      document.body.appendChild(rose);
      setTimeout(() => rose.remove(), 9000);
    }, 250);
  }
</script>

